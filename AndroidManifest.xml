<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chemart.comers"
    android:versionCode="8"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.chemart.comers.Splash"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/splash"
            android:screenOrientation="landscape" >
        <intent-filter><action android:name="android.intent.action.MAIN" />
         <category android:name="android.intent.category.LAUNCHER" /></intent-filter>
         </activity>
        <activity
            android:name="com.chemart.comers.Shop"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/shop"
            android:screenOrientation="landscape" >
        </activity>
        
        <activity android:name="com.chemart.comers.Havings" 
            android:label="@string/havings"
             android:configChanges="orientation|keyboardHidden"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
             android:screenOrientation="landscape">
        </activity>
        <activity android:name="com.chemart.comers.Railto" 
            android:label="@string/Railto"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape">
            </activity>
        <activity android:name="com.chemart.comers.Secret" 
            android:label="@string/Secret"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
             android:screenOrientation="landscape">
            </activity>
        <activity android:name="com.chemart.comers.Bank"
            android:label="@string/Bank"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
              android:screenOrientation="landscape">
        	</activity>
        <activity android:name="com.chemart.comers.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            
        </activity>
        
    </application>

</manifest>
